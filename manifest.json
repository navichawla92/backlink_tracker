{
  "manifest_version": 3,
  "name": "Backlink Checker",
  "version": "1.0",
  "description": "Identify all external links on a webpage and categorize them as follow or nofollow to assess backlink opportunities and compliance with SEO practices.",
  "icons": {
    "16": "images/icon-original.png",
    "48": "images/icon-original.png",
    "128": "images/icon-original.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "images/icon-original.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}